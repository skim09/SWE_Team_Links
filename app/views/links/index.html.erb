  <script>
    
    function toggleHidden(id) {
      
      if ($(id).css('display') == "none") {
          $(id).addClass('animated fadeIn');
          $(id).css('display', 'block') ;
           
      }
      else {
          $(id).css('display', 'none') 
      }
     
    }
    
  </script>
  
  
  
  
