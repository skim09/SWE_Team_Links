<!DOCTYPE html>
<html>
<head>
 
</head>
<body>
    
    <div class = "leftalign">
        
        <%= form_for(@link) do |link| %>
        
         <%= link.label :name %>
          <%= link.text_field :name %> <br>
          
          <%= link.label :url %>
          <%= link.text_field :url %> <br>
          
          <%= link.label :category %>
          <%= link.select :category, ['Internships','Grants','Jobs','Inspiration','Other'] %> <br>
          
          <%= link.label :comments %> 
          <%= link.text_field :comments %> <br>
          
          <%= link.submit %>

        <div class = "row">
            <div class="col-xs-2 col-xs-offset-4">
                <div align="left"> <%= label :link, :comments, 'Comments (Optional)' %> </div>
            </div>
            <div class="col-xs-6">
                <%= text_field :link, 'comments', size: "30" %>
            </div>
        </div>
        <div class = "row">
            <div class="col-xs-2 col-xs-offset-4">
                <div align="left">
                <!-- <%= submit_tag 'Submit' %> -->
                <%= button_tag(type: "submit", class: "btn btn-default") do %>
                    Submit
                <% end %>
                </div>
            </div>
        </div>

        <% end %>
        
    </div>
    
    <div>
    
    <% if @link.errors.any? %> 

    <%= pluralize(@link.errors.count, "error") %> prohibited this from being saved
   <% @link.errors.each do |error, msg| %> 
       <%= msg %>
   <% end %>
   <% end %>
   
   </div>

</body>
</html>